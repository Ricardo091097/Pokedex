<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.StatsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtHP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginTop="50dp"
            android:layout_marginBottom="5dp"
            android:layout_marginHorizontal="40dp"
            android:background="@drawable/roundstyle2"
            android:backgroundTint="#DAFFFFFF"
            android:textSize="18sp"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/txtAttack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="40dp"
            android:background="@drawable/roundstyle2"
            android:backgroundTint="#DAFFFFFF"
            android:textSize="18sp"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/txtDefense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="40dp"
            android:background="@drawable/roundstyle2"
            android:backgroundTint="#DAFFFFFF"
            android:textSize="18sp"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/txtSpecialA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="40dp"
            android:background="@drawable/roundstyle2"
            android:backgroundTint="#DAFFFFFF"
            android:textSize="18sp"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/txtSpecialD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="40dp"
            android:background="@drawable/roundstyle2"
            android:backgroundTint="#DAFFFFFF"
            android:textSize="18sp"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/txtSpeed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="40dp"
            android:background="@drawable/roundstyle2"
            android:backgroundTint="#DAFFFFFF"
            android:textSize="18sp"
            android:textAlignment="center" />

    </LinearLayout>

</FrameLayout>