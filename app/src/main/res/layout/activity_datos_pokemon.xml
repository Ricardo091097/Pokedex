<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondoPokedex"
    android:orientation="vertical"
    tools:context=".DatosPokemonActivity">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/barraMorada">

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/fondoTransparente"
            app:srcCompat="@drawable/ic_pok__ball_icon__1_" />

        <TextView
            android:id="@+id/txtNoPokemon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/fondoTransparente"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="No.001"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/txtNombrePokemon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:background="@color/fondoTransparente"
            android:text="POKEMON"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <ImageButton
            android:id="@+id/btnShiny"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@color/fondoTransparente"
            app:srcCompat="@drawable/ic_stars_svgrepo_com" />

        <ImageButton
            android:id="@+id/btnGender"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/fondoTransparente"
            app:srcCompat="@drawable/ic_masculine" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"/>
    </LinearLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:layout_margin="10dp"
        android:background="@color/fondoTransparenteBlanco" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#409670D6"
        android:layout_marginHorizontal="10dp"
        app:tabIconTint="@color/white"
        app:tabIndicatorColor="@color/white"
        app:tabTextColor="@color/white" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/pager2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="20dp"
        android:background="@color/fondoTransparenteBlanco" />

</LinearLayout>