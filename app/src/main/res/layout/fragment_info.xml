<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondoTransparenteBlanco"
    tools:context=".fragments.InfoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/txtPesoPokemon"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/roundstyle2"
                    android:backgroundTint="#DAFFFFFF"
                    android:text="TextView"
                    android:textAlignment="center"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txtAlturaPokemon"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/roundstyle2"
                    android:backgroundTint="#DAFFFFFF"
                    android:text="TextView"
                    android:textAlignment="center"
                    android:textSize="18sp" />
            </TableRow>

        </TableLayout>

        <TextView
            android:id="@+id/txtTipo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:text="Pokemon tipo"
            android:textAlignment="center"
            android:background="#706434B5"
            android:layout_marginHorizontal="20dp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txtTipo1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="40dp"
            android:background="@drawable/roundstyle2"
            android:backgroundTint="#DAFFFFFF"
            android:textSize="18sp"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/txtTipo2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="40dp"
            android:background="@drawable/roundstyle2"
            android:backgroundTint="#DAFFFFFF"
            android:textSize="18sp"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/txtTipo3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="40dp"
            android:background="@drawable/roundstyle2"
            android:backgroundTint="#DAFFFFFF"
            android:textSize="18sp"
            android:textAlignment="center" />

    </LinearLayout>

</FrameLayout>